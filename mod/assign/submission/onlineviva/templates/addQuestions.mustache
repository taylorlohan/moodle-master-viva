<div class="card">
    <div class="card-body">
        <a href="/moodle-master/mod/assign/submission/onlineviva/newQuestions.php?assignmentid={{assignmentid}}" class="btn btn-secondary float-right mr-1">Add new questions</a>
        <br></div>
</div>
<div class="card">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th class="text-left">Question</th>
            <th></th>

        </tr>
        </thead>
        {{#data}}
            <tr>
                <td></td>
                <td class="text-left">{{{content}}}</td>
                <td><a href="/moodle-master/mod/assign/submission/onlineviva/newQuestions.php?id={{id}}&assignmentid={{assignmentid}}"><i class="fa fa-edit"></i></td>
                <td><a href="/moodle-master/mod/assign/submission/onlineviva/deleteQuestions.php?id={{id}}&assignmentid={{assignmentid}}"><i class="fa fa-trash"></i></td>
            </tr>
        {{/data}}
    </table>
    {{^data}}
        <div class="card-body"><p>There are no results.</p></div>
    {{/data}}
</div>
<script>
    var table = document.getElementsByTagName('table')[0],
            rows = table.getElementsByTagName('tr'),
            text = 'textContent' in document ? 'textContent' : 'innerText';

    for (var i = 1, len = rows.length; i < len; i++) {
        rows[i].children[0][text] = i;
    }
</script>
